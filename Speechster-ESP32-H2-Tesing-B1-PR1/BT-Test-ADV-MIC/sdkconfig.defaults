# ===== Target Chip =====
CONFIG_IDF_TARGET="esp32h2"
CONFIG_IDF_TARGET_ESP32H2=y
CONFIG_ESP32H2_DEFAULT_CPU_FREQ_96=y
CONFIG_ESP32H2_DEFAULT_CPU_FREQ_MHZ=96

# ===== FreeRTOS =====
CONFIG_FREERTOS_UNICORE=y
CONFIG_FREERTOS_HZ=1000
CONFIG_FREERTOS_MAX_TASK_NAME_LEN=16
CONFIG_FREERTOS_SUPPORT_STATIC_ALLOCATION=y
CONFIG_FREERTOS_ENABLE_STACK_OVERFLOW_CHECK=y
CONFIG_FREERTOS_CHECK_MUTEX_GIVEN_BY_OWNER=y

# ===== BLE / NimBLE =====
CONFIG_BT_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_BT_NIMBLE_CONTROLLER=esp_nimble_hci
CONFIG_BT_BLUEDROID_ENABLED=n
CONFIG_BT_NIMBLE_ROLE_CENTRAL=n
CONFIG_BT_NIMBLE_ROLE_PERIPHERAL=y
CONFIG_BT_NIMBLE_ATT_PREPARE_QUEUE_SIZE=10
CONFIG_BT_NIMBLE_GATT_MAX_SERVICE_COUNT=4
CONFIG_BT_NIMBLE_HS_FLOW_CONTROL=y

# ===== I2S =====
CONFIG_I2S_SUPPORT=y
CONFIG_I2S_STD_ENABLED=y
CONFIG_I2S_SUPPORTS_ADC=y
CONFIG_I2S_ISR_IRAM_SAFE=y

# ===== Logging =====
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_TIMESTAMP_SOURCE_RTOS=y

# ===== Partition Table =====
CONFIG_PARTITION_TABLE_SINGLE_APP=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_OFFSET=0x8000

# ===== Compiler Options =====
CONFIG_COMPILER_OPTIMIZATION_DEFAULT=y
CONFIG_COMPILER_OPTIMIZATION_ASSERTIONS_ENABLE=y

# ===== cJSON =====
CONFIG_CJSON_ENABLE=y

# ===== Suppress deprecated I2S warning =====
CONFIG_SUPPRESS_LEGACY_DRIVER_DEPRECATION_WARNING=y
